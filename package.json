{
  "name": "Aristoto-server",
  "version": "0.0.1",
  "description": "Server for Aristoto",
  "author": "Bing Steup <b.steup@sping.nl>",
  "jest": {
    "verbose": false,
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "globals": {
      "__TEST__": true
    },
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/config/",
      "/spec/",
      "/tmp/",
      "databaseConnection.js"
    ]
  },
  "scripts": {
    "start": "nodemon app.js",
    "console": "node console.js",
    "db:migrate": "node_modules/.bin/sequelize db:migrate",
    "db:rollback": "node_modules/.bin/sequelize db:migrate:undo",
    "test": "npm run lint && node_modules/jest/bin/jest.js --runInBand --forceExit --silent",
    "lint": "node_modules/eslint/bin/eslint.js *.js **/*.js",
    "lint-watch": "node_modules/eslint-watch/bin/esw *.js **/*.js"
  },
  "dependencies": {
    "app-module-path": "^2.2.0",
    "jsonfile": "^2.4.0",
    "kcors": "next",
    "koa": "^2.1.0",
    "koa-body": "^1.6.0",
    "koa-bodyparser": "^4.1.0",
    "koa-logger": "^2.0.1",
    "koa-router": "next",
    "mysql": "^2.13.0",
    "raven": "^1.2.0",
    "sequelize": "^3.30.2",
    "sequelize-cli": "^2.5.1",
    "sequelize-to-json": "^0.10.1",
    "sequelize-tokenify": "^0.1.5"
  },
  "devDependencies": {
    "babel-core": "^6.24.0",
    "babel-eslint": "^7.2.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.0",
    "babel-preset-stage-3": "^6.22.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb-base": "^11.1.2",
    "eslint-config-standard": "^7.1.0",
    "eslint-friendly-formatter": "^2.0.7",
    "eslint-plugin-html": "^2.0.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-react": "^6.10.3",
    "eslint-plugin-standard": "^2.1.1",
    "eslint-watch": "^3.0.1",
    "faker": "^4.1.0",
    "jest": "^19.0.2",
    "jshint": "^2.9.4",
    "nodemon": "^1.11.0",
    "shipit-deploy": "^2.4.0",
    "shipit-npm": "^0.2.0",
    "shipit-pm2": "^0.0.4",
    "shipit-shared": "^4.4.2",
    "sqlite": "^2.5.0"
  }
}
